@model MyTask
@{
    ViewData["Title"] = "Add";
    var currentDate = DateTime.Now.ToString("yyyy-MM-dd");
}
<!DOCTYPE html>
<html>

<head>
    <title>Add Task</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #0a55a6;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #0a55a6;
            border-color: #0a55a6;
        }

        .btn-primary:hover {
            background-color: #007bff;
            border-color: #007bff;
        }

        .text-center a {
            color: #007bff;
            text-decoration: none;
    }

    .text-center a:hover {
        text-decoration: underline;
    }
</style>
</head>

<body>

<div class="container">
    <h2>Add Task</h2>

    <form asp-action="Add" method="post">

        <div class="form-group">
            <label asp-for="c_tasktypeid">Task Type:</label>
            <select asp-for="c_tasktypeid" class="form-control">
                <option value="">Select Task</option>
                <option value="Hardware">Hardware</option>
                <option value="Software">Software</option>
            </select>
            <span asp-validation-for="c_tasktypeid" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="c_taskissue">Task Issue:</label>
            <input type="text" class="form-control" name="c_taskissue" required>
        </div>
        <div class="form-group">
            <label for="c_initialdate">Assign Date:</label>
            <input type="date" class="form-control" id="c_initialdate" name="c_initialdate" value="@currentDate" required />
        </div>
        <div class="form-group">
            <label for="c_duedate">Due Date:</label>
            <input type="date" class="form-control" name="c_duedate" required>
        </div>
        <div class="form-group">
            <label for="c_status">Status:</label>
            <input type="text" class="form-control" name="c_status" required>
        </div>

        <button type="submit" class="btn btn-primary">Add Task</button>
        <button class="btn btn-primary" asp-action="Index">Back to List</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>