@model MyTask

@{
    ViewData["Title"] = "GetTaskDetails";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #0a55a6;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #0a55a6;
            border-color: #0a55a6;
        }

        .btn-primary:hover {
            background-color: #007bff;
            border-color: #007bff;
        }

        .text-center a {
            color: #007bff;
            text-decoration: none;
        }

        .text-center a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="container">
        <h2>Task Details</h2>

        <div>
            <strong>Task ID:</strong> @Model.c_taskid <br>
            <strong>Task Type:</strong> @Model.c_tasktypeid <br>
            <strong>Task Issue:</strong> @Model.c_taskissue <br>
            <strong>Initial Date:</strong> @Model.c_initialdate.ToString("dd-MM-yyyy") <br>
            <strong>Due Date:</strong> @Model.c_duedate.ToString("dd-MM-yyyy") <br>
            <strong>Status:</strong> @Model.c_status <br>
        </div><br>

        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
